{
    "manifest_version": 3,
    "name": "Pirate Movie Button",
    "version": "0.4",
    "description": "Adds a button to IMDB movie page to find this movie on Rezka and on torrent trackers websites. Made by Tim Voronkin",
    "permissions": [
        "storage"
    ],
    "action": {
        "default_popup": "popup/popup.html",
        "default_icon": {
            "16": "icon/clapper2_32.png",
            "32": "icon/clapper2_32.png",
            "48": "icon/clapper2_32.png",
            "128": "icon/clapper2_512.png"
        }
    },
    "icons": {
        "16": "icon/clapper2_32.png",
        "32": "icon/clapper2_32.png",
        "48": "icon/clapper2_32.png",
        "128": "icon/clapper2_512.png"
    },
    "content_scripts": [
        {
            "matches": [
                "https://www.imdb.com/title/*"
            ],
            "js": [
                "content/content.js"
            ],
            "css": [
                "content/styles.css"
            ]
        }
    ],
    "web_accessible_resources": [
        {
            "resources": [
                "icon/rezka-logo_32.png",
                "icon/rezka-logo_48.png",
                "icon/inbox-traypng_32.png"
            ],
            "matches": [
                "https://*.imdb.com/*"
            ]
        }
    ]
}